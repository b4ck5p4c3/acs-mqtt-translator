{
  "name": "@b4cksp4ce/asc-mqtt-translator",
  "version": "1.0.0",
  "description": "Low-level controller of B4CKSP4CE automation",
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start-verb": "DEBUG=*:* node src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "B4CKSP4CE Team & Contributors <info@0x08.in>",
  "license": "MIT",
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb-base"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "padded-blocks": [
        "error",
        "always"
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "nonblock-statement-body-position": [
        "error",
        "below"
      ],
      "curly": [
        "error",
        "multi",
        "consistent"
      ]
    }
  },
  "dependencies": {
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "mqtt": "^4.1.0"
  },
  "devDependencies": {
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.2"
  }
}
